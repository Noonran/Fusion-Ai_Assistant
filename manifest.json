{
  "manifest_version": 3,
  "name": "Fusion Browse Assistant",
  "version": "1.0.0",
  "description": "Assistant IA privé pour résumer, questionner et explorer les pages web avec votre clé Mistral. Développé par Fusion AI.",
  "author": "Fusion AI",
  "homepage_url": "https://github.com/Noonran/extension-mistral",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.mistral.ai/*"
  ],
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Fusion Browse Assistant",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/fusionai.png", "images/mistral.png", "images/icon_agent.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
